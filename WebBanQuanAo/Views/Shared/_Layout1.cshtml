@using WebBanQuanAo.Models;
<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{ 
        List<Cart> chiTietDonHang = new List<Cart>();
        if (Session["Cart"] == null)
        {
            chiTietDonHang = new List<Cart>();
            Session["Cart"] = chiTietDonHang;
        }
        var gh = Session["Cart"] as List<Cart>;
    }
</head>

<body>
    <div id="demo" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/s1.jpg" style="width:100%;height:450px;" alt="Los Angeles">
            </div>
            <div class="carousel-item">
                <img src="~/Images/s2.jpg"  style="width:100%;height:450px;" alt="Chicago">
            </div>
            <div class="carousel-item">
                <img src="~/Images/s3.jpg"  style="width:100%;height:450px;" alt="New York">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>
    <nav class="navbar navbar-expand-lg ">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/SanPhams/List">Trang chủ<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Danh Mục
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.Action("Menu", "DanhMucs")
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Nhà Cung Cấp
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.Action("Menu", "NhaCungCaps")
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/khachhangs/Create">Đăng ký</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/khachhangs/Login">Đăng nhập</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admins/Login">Admin</a>
                </li>
                @*<li class="nav-item">
                    <a class="nav-link" href="#">@Session["Username"]</a>
                </li>*@
                @*<li class="nav-item">
                    <a class="nav-link" href="/khachhangs/Logout">Logout</a>
                </li>*@
                @if (@Session["Username"] != null)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @Session["Username"]
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/khachhangs/Edit/@Session["MaKH"]">Thay đổi thông tin tài khoản</a>
                            <a class="dropdown-item" href="/khachhangs/Logout">Logout</a>
                        </div>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="/ShoppingCart/Index">
                        <img src="~/Images/cart.png" style="width:35px;height:30px;" /> @gh.Count
                    </a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="/Sanphams/List">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" name="TenSP" id="TenSP" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    @RenderBody()
    <br />
    <hr />
    @*<div class="row" style="background-color:dimgray;color:white;">
        <div class="col-sm-6" >
            <center> <h1>Lý Quyền</h1></center>          
        </div>
        <div class="col-sm-6">
            <center><h1>Hứa Châu Thảo My</h1></center>
        </div>
    </div>*@
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
